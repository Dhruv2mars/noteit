{
  "name": "noteit-electron",
  "productName": "NoteIt",
  "version": "0.0.1",
  "description": "NoteIt - A simple note-taking application",
  "main": ".vite/build/main.js",
  "scripts": {
    "dev": "vite dev",
    "build:vite": "vite build",
    "preview": "vite preview",
    "start": "electron .vite/build/main.js",
    "build": "npm run build:vite && electron-builder build --mac --win --linux",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "me-DhruvSharma",
    "email": "dhruv.sharma10102005@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/electron-squirrel-startup": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "electron": "36.4.0",
    "electron-builder": "^25.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "build": {
    "appId": "com.dhruvsharma.noteit",
    "productName": "NoteIt",
    "directories": {
      "output": "out/dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      ".vite/build/**/*",
      "!node_modules/*",
      "!src/*",
      "!index.html",
      "!vite.*.config.ts",
      "!out/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
